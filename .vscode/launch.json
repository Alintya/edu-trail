    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: EduTrail.WebUI Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/src/EduTrail.WebUI/EduTrail.WebUI.csproj"
        },
        {
            "name": "Docker .NET Attach (Preview)",
            "type": "docker",
            "request": "attach",
            "platform": "netCore",
            "sourceFileMap": {
                "/src": "${workspaceFolder}"
            },
            //"containerName": "edutrail.webui"
        },
        {
            "name": "Docker .NET Container SDK Launch",
            "type": "docker",
            "request": "launch",
            "netCore": {
                "appProject": "${workspaceFolder}/src/EduTrail.WebUI/EduTrail.WebUI.csproj",
                "buildWithSdk": true
            }
        },
